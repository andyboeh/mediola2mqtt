{
    "name": "Mediola to MQTT",
    "version": "0.3.6",
    "slug": "mediola2mqtt",
    "init": false,
    "description": "Homeassistant interface to Mediola AIO Gateway v4/v4+",
    "arch": ["aarch64", "amd64", "armhf", "armv7", "i386"],
    "startup": "application",
	"services": ["mqtt:need"],
    "boot": "auto",
    "ports" : {
      "1902/udp" : 1902
    },
    "map" : ["config"],
    "options": {
      "mediola": {
        "host": "",
        "password": ""
      },
      "mqtt": {
        "host": "",
        "port": 1803,
        "username": "",
        "password": "",
        "discovery_prefix": "homeassistant",
        "topic": "mediola",
        "debug": false
      },
      "blinds": [ ],
      "buttons": [ ]
    },
    "schema": {
      "mediola": {
        "host": "str",
        "password": "str"
      },
      "mqtt": {
        "host": "str",
        "port": "int(0,65535)",
        "username": "str",
        "password": "password",
        "discovery_prefix": "str",
        "topic": "str",
        "debug": "bool"
      },
      "blinds": [
        {
        "type": "match(ER|RT)?",
        "adr": "str?",
        "name": "str?"
        }
      ],
      "switches": [
        {
        "type": "match(IT|IR)?",
        "adr": "str?",
        "name": "str?",
        "on_value": "str?",
        "off_value": "str?"
        }
      ],
      "buttons": [
        {
        "type": "match(IT)?",
        "adr": "str?"
        }
      ]
    }
}
